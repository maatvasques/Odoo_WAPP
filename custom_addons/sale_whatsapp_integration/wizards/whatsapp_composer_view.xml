<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="whatsapp_sale_composer_view_form" model="ir.ui.view">
            <field name="name">whatsapp.sale.composer.form</field>
            <field name="model">whatsapp.sale.composer</field>
            <field name="arch" type="xml">
                <form string="Enviar Pedido por WhatsApp">
                    <group>
                        <field name="sale_order_id" invisible="1"/>
                        <field name="phone_number"/>
                    </group>
                    <field name="message" nolabel="1" placeholder="Escreva sua mensagem..."/>
                    <group string="Anexos">
                        <field name="attachment_ids" widget="many2many_binary" nolabel="1"/>
                    </group>
                    <footer>
                        <button string="Enviar" name="action_send_whatsapp_boleto" type="object" class="btn-primary"/>
                        <button string="Cancelar" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>